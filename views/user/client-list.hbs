<header>
         <div class="nav-bar">
            <h3 id="logo">BrandLogo</h3>
		<div class="nav-container">
            <nav class="hamburger-nav">
               <div class="nav">
                  <div class="nav-btns">
                        <div id="nav-with-form">
                            <a id="back-btn" href="/user/user-home">&#171 back</a>
                                <div class='form-box'>
                                    <form class="nav-form" action="/user/add-client" enctype="multipart/form-data"  method="POST">
