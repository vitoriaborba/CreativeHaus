                            {{/if}}

                        </div>
                        <div class="log-out">
                        <a href="/auth/logout">Log Out</a>
                        </div>
                    
                    </div>
               </div>
            </nav>
			<button class="hamburger">
				<div class="bar"></div>
			</button>
		</div>
      </div>
	</header>


<div class="container">

<div class="client-row">
{{#each clients}}
<div class="client-details">
 <a href="/client/{{_id}}/client-page"><img src="{{imageUrl}}" alt="{{name}}" /></a>
 <h2>{{name}}</h2>
</div>
{{/each}}
</div>


